<UserControl x:Class="NicoCommentTransfer.UserControls.TextBoxV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NicoCommentTransfer.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="23" d:DesignWidth="200">
    <Grid>
        <TextBlock x:Name="textBlock" Margin="0" Padding="3, 1, 0, 0" FontSize="14" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Foreground="#FFC6C6C6" Visibility="Visible"/>
        <TextBox x:Name="textBox" Margin="0" FontSize="14" Background="{x:Null}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextChanged="TextBoxChanged"/>
    </Grid>
</UserControl>
